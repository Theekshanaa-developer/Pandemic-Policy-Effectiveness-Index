import pandas as pd
import matplotlib.pyplot as plt

lstm = pd.read_csv("4_deep_learning_forecasting/outputs/lstm_preds_India.csv")
gru  = pd.read_csv("4_deep_learning_forecasting/outputs/gru_preds_India.csv")
tcn  = pd.read_csv("4_deep_learning_forecasting/outputs/tcn_preds_India.csv")
plt.figure(figsize=(12,6))
plt.plot(lstm["y_true"], label="True", linewidth=2)
plt.plot(lstm["y_pred"], label="LSTM")
plt.plot(gru["y_pred"], label="GRU")
plt.plot(tcn["y_pred"], label="TCN")
plt.title("Forecast Comparison â€“ India")
plt.legend()
plt.show()
from sklearn.metrics import mean_absolute_error, mean_squared_error
import numpy as np

def metrics(true, pred):
    return {
        "MAE": mean_absolute_error(true, pred),
        "RMSE": np.sqrt(mean_squared_error(true, pred))
    }

metrics(lstm["y_true"], lstm["y_pred"])
